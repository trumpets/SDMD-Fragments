<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="gr.academic.city.sdmd.fragments.ui.fragment.StudentsListFragment">

    <TextView
        android:id="@+id/tv_students_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="@string/sdmd_students"/>

    <ListView
        android:id="@+id/lv_students"
        android:layout_below="@id/tv_students_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
